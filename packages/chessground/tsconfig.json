{
  "include": [
    "src/*.ts"
  ],
  "filesGlob": [
    "src/*.ts"
  ],
  "exclude": [],
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "removeComments": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "target": "ES6",
    "module": "commonjs",
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES6"]
  }
}
