{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "declaration": false,
    "paths": {
      "@application": ["application"],
      "@types": ["application/types"]
    }
  },
  "ts-node": {
    "scope": true,
    "scopeDir": "./src"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
